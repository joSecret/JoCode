---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/JoCode/blog/tags/${tag.toLowerCase()}`} aria-label={tag}>
	<span
		class='font-semibold dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
