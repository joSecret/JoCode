---
import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"docs">["data"];

const { title, description, pubDate, author, image } = Astro.props;
---

<article>
  <div class="hero-image">
    {image && <img width={1020} height={510} src={image.url} alt={image.alt} />}
  </div>
  <div class="prose">
    <div class="title">
      <div class="date">
        {pubDate}
        {author}

        {
          pubDate && (
            <div class="last-updated-on">Last updated on {pubDate}</div>
          )
        }
      </div>
      <h1>
        {title}
      </h1>

      {description}
      <hr />
    </div>
    <slot />
  </div>
</article>
